<h1>Listing turmas</h1>

<table>
  <thead>
    <tr>
      <th>Cd turma</th>
      <th>Dt inicio</th>
      <th>Dt fim</th>
      <th>Dt abertura inscricao</th>
      <th>Dt fim inscricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%= turma.cd_turma %></td>
        <td><%= turma.dt_inicio %></td>
        <td><%= turma.dt_fim %></td>
        <td><%= turma.dt_abertura_inscricao %></td>
        <td><%= turma.dt_fim_inscricao %></td>
        <td><%= link_to 'Show', turma %></td>
        <td><%= link_to 'Edit', edit_turma_path(turma) %></td>
        <td><%= link_to 'Destroy', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

